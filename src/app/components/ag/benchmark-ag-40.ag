<script lang="ts">
  import { signal } from '@angular/core';

  const count40 = signal(0);

  function increment40() {
    count40.update((count) => count + 1);
  }
</script>

<template>
  <div class="benchmark-component">
    <h3>Component 40</h3>
    <button type="button" (click)="increment40()">
      Count {{ count40() }}
    </button>
  </div>
</template>

<style>
  .benchmark-component {
    padding: 1rem;
    border: 1px solid #ccc;
    margin: 0.5rem;
    border-radius: 4px;
  }
</style>
