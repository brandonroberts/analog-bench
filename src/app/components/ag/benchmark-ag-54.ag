<script lang="ts">
  import { signal } from '@angular/core';

  const count54 = signal(0);

  function increment54() {
    count54.update((count) => count + 1);
  }
</script>

<template>
  <div class="benchmark-component">
    <h3>Component 54</h3>
    <button type="button" (click)="increment54()">
      Count {{ count54() }}
    </button>
  </div>
</template>

